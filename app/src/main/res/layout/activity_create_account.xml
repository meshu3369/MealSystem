<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/real_bg"
    android:orientation="vertical"
    tools:context="com.example.meshu.mealsystem.CreateAccount">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layerColor"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name"
                android:textColorHint="@color/mywhite"
                android:ems="10"
                android:textColor="#ffffff"
                android:focusable="true"
                android:id="@+id/etName"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layerColor"
            android:layout_marginTop="15dp"
            >

            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Email"
                android:textColorHint="@color/mywhite"
                android:ems="10"
                android:textColor="#ffffff"
                android:focusable="true"
                android:id="@+id/etEmail"
                android:textSize="18dp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layerColor"
            android:layout_marginTop="15dp"
            >

            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text=""
                android:hint="Password"
                android:textColorHint="@color/mywhite"
                android:ems="10"
                android:textColor="#ffffff"
                android:focusable="true"
                android:id="@+id/etPass"
                android:textSize="18dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layerColor"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:id="@+id/houseLayout3"

            >


            <TextView
                android:textColor="@color/mywhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to create a new Family code?"
                android:id="@+id/tvCheckHouseCode"
                android:paddingBottom="10dp"
                />

            <CheckBox
                android:textColor="@color/mywhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:checked="false"
                android:id="@+id/cbNo" />
            <CheckBox
                android:textColor="@color/mywhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:checked="false"
                android:id="@+id/cbYes" />

            <TextView
                android:textColor="@color/mywhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textSize="14dp"
                android:text="***Family code is an unique code for your family identification eg 123,12/1,56 etc"
                android:paddingBottom="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layerColor"
            android:layout_marginTop="15dp"
            android:id="@+id/houseLayout1"
            android:visibility="gone"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerHouse"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layerColor"
            android:layout_marginTop="15dp"
            android:id="@+id/houseLayout2"
            android:visibility="gone"
            >

            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="House Code"
                android:textColorHint="@color/mywhite"
                android:ems="10"
                android:textColor="#ffffff"
                android:id="@+id/etHouse"
                android:textSize="18dp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layerColor"
            android:layout_marginTop="15dp"
            android:id="@+id/houseLayout4"
            android:visibility="gone"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/mywhite"
                android:id="@+id/btnCreate"
                android:onClick="submitAccount"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
