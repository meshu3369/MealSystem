<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_navigation_drawer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef"
    tools:context="com.example.meshu.mealsystem.NavigationDrawerFragment"
    android:descendantFocusability="blocksDescendants"

    >

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/navi_back"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:background="#70000000"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNavigationPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="meshu.uiu@gmail.com.bd"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/goToResut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#af69c7"
            android:weightSum="100">

            <ImageView
                android:id="@+id/result"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:paddingLeft="30dp"
                android:src="@mipmap/checking"


                />

            <TextView

                android:id="@+id/etResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:paddingRight="50dp"
                android:text="@string/check_result"
                android:textColor="#fafafa"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goToSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#af69c7"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:paddingLeft="30dp"
                android:src="@mipmap/checking"


                />

            <TextView

                android:id="@+id/etSheet"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:text="All Member's Record"
                android:textColor="#fafafa"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goToFinalResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#af69c7"
            android:orientation="horizontal"
            android:weightSum="100"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:paddingLeft="30dp"
                android:src="@mipmap/checking" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:paddingRight="20dp"
                android:text="Month-end close"
                android:textColor="#fafafa"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#af69c7"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:text="Sign Out"
                android:id="@+id/signOut"
                android:textAlignment="center"
                android:textColor="#fafafa"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Developer Information"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="40"
                    android:src="@mipmap/meshu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:lines="3"
                    android:text="Meshu\nUnited International University"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
